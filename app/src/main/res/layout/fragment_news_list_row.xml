<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/news_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/news_list_row_img"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="8dp"
        android:scaleType="centerCrop"
        app:srcCompat="?android:attr/colorButtonNormal" />

    <TextView
        android:id="@+id/news_list_row_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:singleLine="false"
        android:textColor="@color/primary_text"
        android:textSize="18sp"
        android:visibility="visible"
        tools:text="Выставка графики Анатолия Заславского и Вероники Леонтьевой" />

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="8dp"
        android:id="@+id/favourite_img"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:src="@drawable/ic_star_icon" />

</LinearLayout>